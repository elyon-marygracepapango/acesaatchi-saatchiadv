<odoo>
    <data>
        <record id="view_move_form_inherit_accrued" model="ir.ui.view">
            <field name="name">account.move.form.inherit.accrued</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='other_info']/group[1]/group[@name='misc_group']/field[@name='checked']" position="after">
                    <field name="x_related_custom_accrued_record" invisible="not x_related_custom_accrued_record"/>
                </xpath>
            </field>
        </record>
        <record id="view_sale_order_list_inherit_custom" model="ir.ui.view">
            <field name="name">sale.order.list.inherit.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                
                    <field name="x_ce_approved_estimate_billing"
                           widget="monetary"
                           sum="AEB"/>
                
                    <field name="x_ce_approved_estimate_revenue"
                           widget="monetary"
                           sum="AER"/>
                
                    <field name="x_ce_invoiced_billing"
                           widget="monetary"
                           sum="IB"/>
                
                    <field name="x_ce_invoiced_revenue"
                           widget="monetary"
                           sum="IR"/>
                
                    <field name="x_ce_variance_billing"
                           widget="monetary"
                           sum="VB"/>
                
                    <field name="x_ce_variance_revenue"
                           widget="monetary"
                           sum="VR"/>
                
                </xpath>


    
            </field>
        </record>

    <record id="sale_order_form_inherit_accrued_revenue_button_box" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.accrued_revenue_button_box</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="mode">extension</field>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="related_accrued_revenue_count" invisible="1"/>
                <button class="oe_stat_button" name="action_view_accrued_revenues" type="object" icon="fa-book" groups="account.group_account_manager" invisible="related_accrued_revenue_count == 0">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="related_accrued_revenue_count"/></span>
                        <span class="o_stat_text">Accrual Record</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    </data>
</odoo>
