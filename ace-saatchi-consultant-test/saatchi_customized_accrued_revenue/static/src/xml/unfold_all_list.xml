<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="saatchi.accrued_revenue_journal_items.ListView.Buttons" t-inherit="web.ListView">
        <xpath expr="//Layout/t[@t-set-slot='control-panel-create-button']" position="inside">
            <button type="button" class="btn btn-primary" style="margin-right: 10px;" t-on-click="onUnfoldAllClick">
                <i class="fa fa-expand"/> Unfold Group
            </button>
            <button type="button" class="btn btn-secondary" style="margin-right: 10px;" t-on-click="onFoldAllClick">
                <i class="fa fa-compress"/> Fold Group
            </button>
        </xpath>
    </t>
</templates>